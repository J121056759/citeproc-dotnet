<Window x:Class="CiteProc.WpfDemo.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        WindowStyle="SingleBorderWindow"
        ShowInTaskbar="False"
        ResizeMode="NoResize"
        Title="CiteProc.NET - About" Height="210" Width="350" Icon="Csl.ico">
    <StackPanel Margin="20">
        <StackPanel Orientation="Horizontal">
            <Image Source="Images/Csl_large.png" Margin="0 0 10 0" />
            <TextBlock><Span FontSize="24"><Bold>CiteProc</Bold>.NET</Span> v1.0</TextBlock>
        </StackPanel>
        <TextBlock Margin="0 10 0 0" TextWrapping="Wrap">Copyright © 2016 Fouke Boss</TextBlock>
        <TextBlock Margin="0 10 0 0" TextWrapping="Wrap">CiteProc.NET is a <Hyperlink NavigateUri="http://citationstyles.org/" RequestNavigate="Hyperlink_Navigate">Citation Style Language (CSL)</Hyperlink> v1.0.1 processor written in C#.</TextBlock>
        <Button Name="btnOK" Margin="0 10 0 0" Width="75" HorizontalAlignment="Right" Click="btnOK_Click">OK</Button>
    </StackPanel>
</Window>
